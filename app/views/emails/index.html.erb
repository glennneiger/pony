
<div class="pony-topper">
  <div class="container">
    <div class="jumbotron">
      <h1 class="pony-no-border" style="padding-top: 0;">Welcome to Pony</h1>
      <p>Create emails that you can export to MailChimp.</p>
    </div>
  </div>
</div>

<div class="pony-section pony-topper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Emails</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi in rutrum sem. Cras molestie, lectus a lobortis interdum, diam mauris ultricies felis.</p>
      </div>
      <div class="col-md-3">
      </div>
      <div class="col-md-3">
        <%= link_to 'Create New Email', new_email_path, class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  </div><!-- /.container -->
</div>


<div class="pony-section pony-spacer-lg">
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Created</th>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @emails.each do |email| %>
          <tr>
            <td><%= email.created_at.strftime("%m/%d/%Y at %I:%M%p") %></td>
            <td><%= email.title %></td>
            <td><%= email.content&.first(200) %></td>
            <td><%= link_to 'Preview', render_preview_email_path(email), class: 'btn btn-default btn-block' %></td>
            <td><%= link_to 'Edit', edit_email_path(email), class: 'btn btn-default btn-block' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
